.container {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.preview-box {
  width: 100%;
  margin: 30rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.preview-image {
  width: 100%;
  height: 750rpx;
  border-radius: 10rpx;
}

.greeting-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #333;
  text-align: center;
  padding: 0 30rpx;
}

.action-buttons {
  width: 100%;
  margin-top: 40rpx;
}

.btn {
  width: 100%;
  margin: 20rpx 0;
  background: #ff0000;
  color: #fff;
  border-radius: 10rpx;
}

.btn.share {
  background: #07c160;
} 