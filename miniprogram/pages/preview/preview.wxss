.container {
  min-height: 100vh;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  background-color: #f8f8f8;
}

.image-container {
  flex: 1;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 30rpx 0;
}

.preview-image {
  width: 100%;
  height: 800rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.loading, .error {
  font-size: 28rpx;
  color: #999;
}

.action-buttons {
  width: 100%;
  padding: 30rpx 0;
}

.btn {
  width: 100% !important;
  height: 88rpx;
  line-height: 88rpx;
  margin: 20rpx 0;
  border-radius: 44rpx;
  font-size: 32rpx;
  background-color: #ff4d4f;
  color: #fff;
  border: none;
}

.btn.share {
  background-color: #07c160;
}

.btn[disabled] {
  background-color: #ccc !important;
  color: #fff !important;
} 